.books-list-wrapper .books-item .book-img {
    /* width: 240rpx; */
	height: 360rpx;
}
.books-list-wrapper .book-info {
    position: absolute;
    padding: 16rpx;
    bottom: 0;
    left: 0;
    right: 0;
    height: 136rpx;
    box-sizing: border-box;
    /* background-color: rgb(255, 162, 162); */
    background-color: #fff;
}
.books-list-wrapper .book-info .book-name,
.books-list-wrapper .book-info .book-author {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
        overflow: hidden;
}
.books-list-wrapper .book-info .book-name {
    font-size: 24rpx;
}
.books-list-wrapper .book-info .book-author {
    font-size: 20rpx;
    color: #999;
}
.books-list-wrapper .book-status {
    display: flex;
    justify-content: flex-end;
    margin-top: 14rpx;
    color: #999;
    font-size: 20rpx;
}