.books-container {
}
.books-container .search-wrapper {
    width: 690rpx;
    height: 68rpx;
    margin: 20rpx auto;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f7f7f7;
    border-radius: 34rpx;
}
.books-container .search-wrapper .icon-search {
	width: 28rpx;
	height: 28rpx;
}

.books-container .search-wrapper .txt {
    color: #999;
    margin-left: 10rpx;
}
.books-list-wrapper {
    padding-bottom: 20rpx;
    background-color: #f7f7f7;
}
.books-list-wrapper .title {
    display: block;
    padding: 30rpx 0 20rpx;
    text-align: center;
}
.books-list-wrapper .books-list {
    overflow: hidden;
    /* padding: 0 20rpx; */
    /* display: flex; */
    /* flex-wrap: wrap; */
    /* justify-content: space-evenly; */
}
.books-list-wrapper .books-item {
    position: relative;
    float: left;
    margin-left: 12%;
	width: 240rpx;
    height: 360rpx;
    margin-bottom: 58rpx;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 2rpx 2rpx 4rpx  rgba(177, 177, 177, 0.1);
}
