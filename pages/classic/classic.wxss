/* 流行内容 */
.content-wrapper {
}
.content-wrapper .img-wrapper {
	position: relative;
}
/* 音乐内容 */
.content-wrapper .img-wrapper .music-wrapper {
	height: 500rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.content-wrapper .img-wrapper .music-wrapper .music-img-wrapper {
	position: relative;
	width: 400rpx;
	height: 400rpx;
	border-radius: 200rpx;
	overflow: hidden;
}
.content-wrapper .img-wrapper .music-wrapper .music-img-wrapper .btn {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	width: 120rpx;
	height: 120rpx;
}	
	
