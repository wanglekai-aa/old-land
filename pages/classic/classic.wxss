.content-wrapper .text-img {
	position: absolute;
	width: 46rpx;
	height: 142rpx;
	bottom: -71rpx;
	left: 30rpx;
}

/* 切换内容 */
.content-wrapper .toggle-wrapper {
	/* position: relative; */
	
}
.content-wrapper .toggle-wrapper .btn {
	padding: 10rpx;
	width: 23rpx;
	height: 34rpx;
}
.content-wrapper .toggle-wrapper .btn.disable {
	opacity: .3;
}

.content-wrapper .info {
